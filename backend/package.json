{
  "name": "rimba-nusantara-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "start:prod": "cross-env NODE_ENV=production node src/server.js",
    "migrate": "node scripts/migrate.js",
    "db:setup": "psql -U postgres -f database/admin.sql",
    "clean": "node -e \"const fs = require('fs'); if(fs.existsSync('dist')) fs.rmSync('dist', {recursive: true, force: true});\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.18.0"
  }
}
